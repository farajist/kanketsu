{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest", "express"],
    "baseUrl": "src",
    "paths": {
      "@common/*": ["common/*"],
      "@utils/*": ["utils/*"],
      "@modules/*": ["modules/*"],
      "@lib/*": ["lib/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
